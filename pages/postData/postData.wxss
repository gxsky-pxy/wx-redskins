.container {
  padding: 32px;
  height: calc(100vh - 120px);
}

.fixed-bottom {
  width: 100%;
  height: 120px;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: fixed;
  bottom: 0;
}

.contact {
  font-size: 14px;
  font-weight: 500;
  color: #404352;
  line-height: 20px;
  margin: 6px 0 12px 0;
}

.tips{
  font-size: 14px;
  font-weight: 500;
  color: #404352;
  line-height: 20px;
  padding-bottom: 12px;
}

.phone {
  color: #1890FF;
  margin-left: 8px;
}

.price {
  text-align: left;
  margin-left: 12px;
  font-weight: 550;
  color: var(--notice-bar-text0color, #ed6a0c);
}

.title {
  font-size: 13px;
  font-weight: 500;
  line-height: 18px;
}

.input {
  border: 1PX solid #F7F8FB;
  margin-top: 8px;
  width: -webkit-fill-available;
  height: 44px;
  background: #F7F8FB;
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 0 12px;
}

.border {
  border: 1PX solid #404352;
}
.err_border{
  border: 1PX solid red;
}

.before-btn {
  border-radius: 12px;
  border: 1PX solid #F0F2F5;
  display: flex;
  align-items: center;
}

.before-btn_price {
  margin: 12px 0;
  width: 140px;
  text-align: center;
  font-size: 24px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #404352;
  line-height: 21px;
}
.error_text{
  display:block;
  height: 18px;
  font-size:13px;
  color:red;
  padding:4px;
}