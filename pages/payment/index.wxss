/* pages/payment/index.wxss */
.container {
  height: calc(100vh - 120px);
}

.title {
  font-size: 22px;
  font-weight: 600;
  color: #404352;
  line-height: 30px;
}

.bar {
  position: relative;
  width: 100%;
}

.color {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 64px;
  height: 16px;
  background: linear-gradient(45deg, #FF4031 0%, #FF9CEB 100%);
  opacity: 0.5;
}

.detail {
  font-size: 15px;
  font-weight: 500;
  color: #404352;
  line-height: 21px;
}

.fixed-bottom {
  width: 100%;
  height: 120px;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: fixed;
  bottom: 0;
}

.contact {
  font-size: 14px;
  font-weight: 500;
  color: #404352;
  line-height: 20px;
  margin: 6px 0 12px 0;
}

.phone {
  color: #1890FF;
  margin-left: 8px;
}

.btn {
  width: 311px;
  margin-bottom: 6px;
}